<scene>
  <simtype type="rigid-body"/>
  <description text="A triangle hits a rectangle off-center. The triangle should continue moving downwards without rotation. The rectangle should pivot clockwise."/>
  <!--<viewport cx="1.0" cy="0.0" size="2.1"/>-->
  <maxsimfreq max="100.0"/>
  <duration time="2.0"/>

  <rigidbodyintegrator type="symplectic-euler" dt="0.01"/>

  <rigidbodycollisionhandling detection="all-pairs" response="lcp"/>

  <!-- Rigid body moving downwards -->
  <rigidbodyvertex x="0.5" y="4" m="1"/>
  <rigidbodyvertex x="1.5" y="4" m="1"/>
  <rigidbodyvertex x="1.0" y="3" m="1"/>

  <!-- Motionless rigid body -->
  <rigidbodyvertex x="-1" y="2" m="1"/>
  <rigidbodyvertex x="2"  y="2" m="1"/>
  <rigidbodyvertex x="2"  y="1" m="1"/>
  <rigidbodyvertex x="-1" y="1" m="1"/>

  <rigidbody p="0" p="1" p="2" vx="0.0" vy="-3.0" omega="0.0" r="0.1"/>
  <rigidbody p="3" p="4" p="5" p="6" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>

</scene>
