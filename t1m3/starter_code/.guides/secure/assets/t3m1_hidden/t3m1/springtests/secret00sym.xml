<scene>
  <simtype type="rigid-body"/>
  <description text="Rigid bodies connected by springs of different stiffness that exert no torque. Rigid bodies should oscillate without rotating. Intended as a test of the spring force that exerts no torque, and as a verificaiton that different stiffnesses function correctly."/>
  <duration time="100.0"/>
  <maxsimfreq max="5000.0"/>

  <rigidbodyintegrator type="symplectic-euler" dt="0.01"/>

  <!-- Weaker spring -->
  <!-- Left rigid body -->
  <rigidbodyvertex x="-5" y="-1" m="1"/>
  <rigidbodyvertex x="-5" y=" 1" m="1"/>
  <rigidbodyvertex x="-3" y=" 1" m="1"/>
  <rigidbodyvertex x="-3" y="-1" m="1"/>
  <rigidbody p="0" p="1" p="2" p="3" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>
  <!-- Right rigid body -->
  <rigidbodyvertex x="3" y="-1" m="1"/>
  <rigidbodyvertex x="3" y=" 1" m="1"/>
  <rigidbodyvertex x="5" y=" 1" m="1"/>
  <rigidbodyvertex x="5" y="-1" m="1"/>
  <rigidbody p="4" p="5" p="6" p="7" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>
  <!-- Force connecting the two rigid bodies -->
  <rigidbodyspringforce i="0" pix="1.0" piy="0.0" j="1" pjx="-1.0" pjy="0.0" k="1.0" l0="4.0"/>
  
  <!-- Stronger spring -->
  <!-- Left rigid body -->
  <rigidbodyvertex x="-5" y="-4" m="1"/>
  <rigidbodyvertex x="-5" y="-2" m="1"/>
  <rigidbodyvertex x="-3" y="-2" m="1"/>
  <rigidbodyvertex x="-3" y="-4" m="1"/>
  <rigidbody p="8" p="9" p="10" p="11" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>
  <!-- Right rigid body -->
  <rigidbodyvertex x="3" y="-4" m="1"/>
  <rigidbodyvertex x="3" y="-2" m="1"/>
  <rigidbodyvertex x="5" y="-2" m="1"/>
  <rigidbodyvertex x="5" y="-4" m="1"/>
  <rigidbody p="12" p="13" p="14" p="15" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>
  <!-- Force connecting the two rigid bodies -->
  <rigidbodyspringforce i="2" pix="1.0" piy="0.0" j="3" pjx="-1.0" pjy="0.0" k="2.0" l0="4.0"/>

</scene>
