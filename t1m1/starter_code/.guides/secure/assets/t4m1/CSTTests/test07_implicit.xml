<scene>
  <description text="A square, sheared. Oscillation should be symmetric about the diagonals."/>

  <duration time="50.0"/>
  <integrator type="implicit-euler" dt="0.1"/>
  <maxsimfreq max="500.0"/>

  <particle m="1.0" px="0.0" py="0.0" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px="0.8" py="0.0" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px="0.1" py="0.8" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px="0.9" py="0.8" vx="0.0" vy="0.0" fixed="0"/>

  <edge i="0" j="1"/>
  <edge i="1" j="2"/>
  <edge i="2" j="0"/>
  <edge i="2" j="3"/>
  <edge i="3" j="1"/>
  <elasticbodycstforce i1="0" i2="1" i3="2" youngsmodulus="1.0" poissonratio="0.0" xb3x="0.0"/>
  <elasticbodycstforce i1="3" i2="2" i3="1" youngsmodulus="1.0" poissonratio="0.0" xb1x="0.8" xb2x="0.0"/>
  
</scene>
