<scene>
  <simtype type="rigid-body"/>
  <description text="Two rigid bodies connected by a spring that exerts no torque. Rigid bodies should oscillate without rotating. Intended as a test of the spring force that exerts no torque."/>
  <duration time="100.0"/>
  <maxsimfreq max="5000.0"/>

  <rigidbodyintegrator type="symplectic-euler" dt="0.01"/>

  <!-- Left rigid body -->
  <rigidbodyvertex x="-5" y="-1" m="1"/>
  <rigidbodyvertex x="-5" y=" 1" m="1"/>
  <rigidbodyvertex x="-3" y=" 1" m="1"/>
  <rigidbodyvertex x="-3" y="-1" m="1"/>
  <rigidbody p="0" p="1" p="2" p="3" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>

  <!-- Right rigid body -->
  <rigidbodyvertex x="3" y="-1" m="1"/>
  <rigidbodyvertex x="3" y=" 1" m="1"/>
  <rigidbodyvertex x="5" y=" 1" m="1"/>
  <rigidbodyvertex x="5" y="-1" m="1"/>
  <rigidbody p="4" p="5" p="6" p="7" vx="0.0" vy="0.0" omega="0.0" r="0.1"/>

  <!-- Force connecting the two rigid bodies -->
  <rigidbodyspringforce i="0" pix="1.0" piy="0.0" j="1" pjx="-1.0" pjy="0.0" k="1.0" l0="4.0"/>
</scene>
