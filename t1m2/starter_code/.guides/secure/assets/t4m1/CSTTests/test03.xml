<scene>
  <description text="A right triangle, slightly stretched vertically. Tests the elastic force in the vertical direction"/>

  <duration time="50.0"/>
  <integrator type="symplectic-euler" dt="0.01"/>
  <maxsimfreq max="500.0"/>

  <particle m="1.0" px="-0.8" py="0.0" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px="0.8" py="0.0" vx="0.0" vy="0.0" fixed="0"/>
  <particle m="1.0" px="0.0" py="0.9" vx="0.0" vy="0.0" fixed="0"/>

  <edge i="0" j="1"/>
  <edge i="1" j="2"/>
  <edge i="2" j="0"/>
  <elasticbodycstforce i1="0" i2="1" i3="2" youngsmodulus="1.0" poissonratio="0.0" xb3y="0.8"/>
  
</scene>
