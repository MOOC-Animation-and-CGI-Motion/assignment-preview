  <particle m="1.0" px="-3.0" py="-1.0" vx="1.0" vy="0.0" fixed="0" radius="0.2"/>

  <particle m="1.0" px="-1.0" py="-1.0" vx="0.0" vy="0.0" fixed="0" radius="0.1"/>
  <particle m="1.0" px=" 1.0" py="-1.0" vx="0.0" vy="0.0" fixed="0" radius="0.1"/>

  <edge i="1" j="2" radius="0.2"/>

  <springforce edge="0" k="1000" l0="2"/>
</scene>
